<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1>BREAD (Browse, Read, Edit, Add, Delete)</h1>
      <h2>Filters</h2>
      <br />
      <form action="" method="GET">

        <div class="form-group row">
          <label for="id" class="col-sm-2 col-form-label">
          <div class="form-check">
              <input type="hidden" name="page" value="1">
              <input type="checkbox" class="form-check-input" name="isID" <%= (query.isID) == 'on' ? "checked" : "" %>/>
              <label class="form-check-label" for="defaultCheck1">
                ID
              </label>
            </div>
          </label>
        <div class="col-sm-10">
          <input type="number" class="form-control" placeholder="ID" name="valueID" value="<%= query.valueID %>"`>
        </div>
      </div>
        <!--       String        -->
        <div class="form-group row">
          <label for="String" class="col-sm-2 col-form-label">
          <div class="form-check">
              <input type="checkbox" class="form-check-input" name="isString" <%= (query.isString) == 'on' ? "checked" : "" %>/>
              <label class="form-check-label" for="defaultCheck1">
                String
              </label>
            </div>
          </label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="String" name="valueString" value="<%= query.valueString %>">
        </div>
      </div>
        <!--       Integer        -->
        <div class="form-group row">
          <label for="integer" class="col-sm-2 col-form-label">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="isInt" <%= (query.isInt) == 'on' ? "checked" : "" %> />
              <label class="form-check-label" for="defaultCheck1">Integer</label>
            </div>
          </label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="valueInt" placeholder="Integer" value="<%= query.valueInt %>">

          </div>

        </div>


       
        <!--       Float        -->
        <div class="form-group row">
          <label for="String" class="col-sm-2 col-form-label">
          <div class="form-check">
              <input type="checkbox" class="form-check-input" name="isFloat" <%= (query.isFloat) == 'on' ? "checked" : "" %>/>
              <label class="form-check-label" for="defaultCheck1">
                Float
              </label>
            </div>
          </label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="Float" name="valueFloat" value="<%= query.valueFloat %>">
        </div>
      </div>
        <!--       Date        -->
        <div class="form-group row">
          <label for="inputEmail3" class="col-sm-2 col-form-label">
          <div class="form-check">
              <input type="checkbox" class="form-check-input" name="isDate" <%= query.isDate == 'on' ? "checked" : "" %>/>
              <label class="form-check-label" for="defaultCheck1">
                Date
              </label>
            </div>
          </label>
              <div class="col-sm-4">
                <input type="date" class="form-control" placeholder="Start date" name="start" value="<%= query.start %>">
              </div>
      </div>

      <div class="form-group row">
          <label for="inputEmail3" class="col-sm-2 col-form-label">
          </label>
              <div class="col-sm-4">
                <p>to</p>
                <input type="date" class="form-control" placeholder="End date" name="end" value="<%= query.valueID %>">
              </div>
      </div>

        <!--       Boolean        -->
        <div class="form-group row">
          <label for="inputEmail3" class="col-sm-2 col-form-label">
          <div class="form-check">
              <input type="checkbox" class="form-check-input" name="isBoolean"  <%= query.isBoolean == 'on' ? "checked" : "" %>/>
              <label class="form-check-label" for="defaultCheck1">
                Boolean
              </label>
            </div>
          </label>
              <div class="col-sm-10">
                  <select class="form-control" name="valueBoolean" id="bool">
                      <option disabled>choose the boolean</option>
                      <option <%= query.bool ? selected : "" %>>true</option>
                      <option <%= query.bool ? selected : "" %>>false</option>
                  </select>
              </div>
      </div>
      <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" name="button" class="btn btn-primary">Search</a>
          </div>
      </div>
    </form>

      <!--VIEW DATA TABLE-->   

        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">String</th>
              <th scope="col">Integer</th>
              <th scope="col">Float</th>
              <th scope="col">Date</th>
              <th scope="col">Boolean</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
                          <%# laporan = elemen, index = index  %>
            <% let num = 1; %>
          <% for(const laporan of model) { %>
          <tr>
            <td> <%= laporan.id %> </td>
            <td> <%= laporan.data_string %> </td>
            <td> <%= laporan.data_integer %> </td>
            <td> <%= laporan.data_float %> </td>
            <td> <%= laporan.data_date %> </td>
            <td> <%= laporan.data_boolean %> </td>
            <td>              
    <a class="btn btn-success edit" href="edit/<%= laporan.id %>">Edit</a>                       
    <a class="btn btn-danger delete" onclick="return confirm('Are you sure you want to delete this item?');" href="delete/<%= laporan.id %>">Delete</a>                       
   </td>
  
            </tr>
            
          <% } %>
          </tbody>
        </table>
        
         <!--PAGINATION-->
    <nav aria-label="...">
      <ul class="pagination">
        <li class="page-item <%= (current == 1) ? 'disabled' : '' %>">
          <a class="page-link" href="<%= (url.length > 1) ? url.replace('?page=' + current,'?page=' + Number(current-1)) : '?page=' + Number(current-1) %>">Previous</a>
        </li>
        <% for(let i = (current == 1) ? current : current - 1; i <= pages && i <= current + 5; i++){ %>
        <li class="page-item <%= (i == current) ? 'active' : '' %>"><a class="page-link" href="<%= (url.length > 1) ? url.replace('?page=' + current,'?page=' + i) : '?page=' + i %>"><%=i%></a></li>
        <% } %>
        <li class="page-item <%= (current == pages) ? 'disabled' : '' %> ">
          <a class="page-link" href="<%=  (url.length > 1) ? url.replace('?page=' + current,'?page=' + Number(current + 1)) : '?page=' + Number(current + 1)%>">Next</a>
        </li>
      </ul>
    </nav>
        <div class="form-group row">
          <a href="add"
            ><button type="button" class="btn btn-primary">Add</button></a
          >
        </div>
      
    </div>
  </body>
</html>
